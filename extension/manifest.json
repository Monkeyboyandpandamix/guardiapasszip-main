{
  "manifest_version": 3,
  "name": "GuardiaPass AI Shield",
  "version": "5.0.0",
  "description": "AI-powered security shield with dark web monitoring, autofill, and credential protection.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
